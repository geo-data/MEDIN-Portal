<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map bgcolor="white" srs="+proj=latlong +datum=WGS84">

  <Style name="AreaOfInterest">
    <Rule>
	  <Filter>[type] = 'bbox'</Filter>
      <PolygonSymbolizer>
        <CssParameter name="fill">#ca0000</CssParameter>
		<CssParameter name="fill-opacity">0.25</CssParameter>
      </PolygonSymbolizer>
      <LineSymbolizer>
        <CssParameter name="stroke">#ca0000</CssParameter>
        <CssParameter name="stroke-width">1.5</CssParameter>
      </LineSymbolizer>
    </Rule>
    <Rule>
	  <Filter>[type] = 'point'</Filter>
	  <PointSymbolizer allow_overlap="yes"
					   file="${root_dir}/data/symbols/star.png"
					   type="png"
					   width="25"
					   height="24" />
	</Rule>
  </Style>

  <Style name="Raster">
    <Rule>
      <RasterSymbolizer>
        <CssParameter name="opacity">1</CssParameter>
        <CssParameter name="scaling">bilinear</CssParameter>
      </RasterSymbolizer>
    </Rule>
  </Style>
  
  <Layer name="Background" srs="+proj=latlong +datum=WGS84">
    <StyleName>Raster</StyleName>
    <Datasource>
      <Parameter name="type">gdal</Parameter>
      <Parameter name="file">${root_dir}/data/raster/background-wms.vrt</Parameter>
    </Datasource>
  </Layer>
  
  <Layer name="Area Of Interest" srs="+proj=latlong +datum=WGS84">
    <StyleName>AreaOfInterest</StyleName>
  </Layer>
  
</Map>
